<div class="container">
  <h1>ChatGPT GUI</h1>

  <div id="topic-select">
    <select id="topic-dropdown" name="topic" phx-change="change_topic">
      <%= for topic <- @topics do %>
        <option value={topic} selected={if @current_topic==topic ,do: 'true' }>
          <%= topic %>
        </option>
        <% end %>
    </select>
  </div>

  <div id="chat-messages" style="width: auto;height: auto">
    <%= for message <- @messages do %>
      <div class="message">
        <span class="user">
          <%= message.user %>:
        </span>
        <span class="content">
          <%= message.content %>
        </span>
      </div>
      <% end %>
  </div>

  <div id="chat-input">
    <form phx-submit="send_message">
      <input id="message-input" style="width: 600px;" type="text" name="message" placeholder="Enter your message..."
        value={@input_text}>
      <.button type="submit">Send</.button>

    </form>
  </div>
</div>